<%= form_for @learning_material do |f| %>
  <p>
    <%= f.label :topic %>
    <%= f.text_field :topic %>
  </p>
  <p>
    <%= f.label :source %>
    <%= f.text_field :source %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
 
  <p>
    <%= f.submit :class => 'btn btn-default' %>
  </p>
<% end %>