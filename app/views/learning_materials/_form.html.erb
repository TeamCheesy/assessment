<%= form_for @learning_material do |f| %>
  <% if @learning_material.errors.any? %>
    <h2>Unable to create new learning material:</h2>
      <ul>
      <% @learning_material.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
    <p></p>
  <% end %>
  <p>
    <%= f.label :topic %>
    <%= f.text_field :topic %>
  </p>
  <p>
    <%= f.label :source %>
    <%= f.text_field :source %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.radio_button(:level, 'Basic') %>
    <%= f.label(:level_basic, 'Basic') %>
    <%= f.radio_button(:level, 'Advanced') %>
    <%= f.label(:level_advanced, 'Advanced') %>
  </p>
 
  <p>
    <%= f.submit :class => 'btn btn-default' %>
  </p>
<% end %>